{
    "env": {
        "commonjs": true,
        "es6": true,
        "node": true
    },
    "extends": [
        "airbnb-base"
    ],
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
        "ecmaVersion": 2018
    },
    "plugins": ["jest"],
    "rules": {
      "no-console": "off",
      "no-trailing-spaces": "off",
      "global-require": "off",
      "padded-blocks": "off",
      "no-unused-vars": "warn",
      "no-param-reassign": ["error", { "props": false }],
      "radix": "warn"
    },
    "overrides": [
      {
        "files": ["**/*.test.js"],
        "extends": ["plugin:jest/recommended"]
      }
    ]
}
